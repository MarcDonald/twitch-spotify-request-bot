{
  "name": "twitch-spotify-request",
  "version": "4.2.3",
  "description": "Bot to scrape Twitch chat for Spotify links, then add them to a playlist",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run tsc",
    "tsc": "tsc",
    "start": "node build/index.js",
    "dev": "npm run build && npm start",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "prettier -c 'src/**/*{.js,.ts}' && prettier -c '*.md'",
    "lint:fix": "prettier --write 'src/**/*{.js,.ts}' && prettier --write '*.md'"
  },
  "engines": {
    "node": ">=14.x"
  },
  "author": "Marc Donald",
  "license": "MIT",
  "dependencies": {
    "dotenv": "8.6.0",
    "env-smart": "2.2.0",
    "express": "4.17.1",
    "fs": "0.0.1-security",
    "spotify-web-api-node": "5.0.2",
    "tmi.js": "1.8.3"
  },
  "devDependencies": {
    "@types/express": "4.17.12",
    "@types/node": "14.17.1",
    "@types/spotify-web-api-node": "5.0.2",
    "@types/tmi.js": "1.7.1",
    "nodemon": "2.0.13",
    "prettier": "2.0.5",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  }
}
